<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginFragment">

    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/shimmerLoginTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="@string/verification_code"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/logo_orange"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:reflectionColor="@color/logo_color" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/number1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:maxLength="1"
        android:inputType="number"
        android:background="@drawable/login_button_border_square"
        app:layout_constraintTop_toBottomOf="@id/shimmerLoginTitleTextView"
        android:layout_marginTop="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/number2" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/number2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:maxLength="1"
        android:inputType="number"
        android:textColor="@color/white"
        android:background="@drawable/login_button_border_square"
        app:layout_constraintTop_toBottomOf="@id/shimmerLoginTitleTextView"
        android:layout_marginTop="150dp"
        app:layout_constraintStart_toEndOf="@id/number1"
        app:layout_constraintEnd_toStartOf="@id/number3" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/number3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:maxLength="1"
        android:inputType="number"
        android:background="@drawable/login_button_border_square"
        app:layout_constraintTop_toBottomOf="@id/shimmerLoginTitleTextView"
        android:layout_marginTop="150dp"
        android:textColor="@color/white"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@id/number2"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/completeButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/signup_button_border_square"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/complete"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>